<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KolokwiumMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="250"
            Padding="300,0"
            VerticalOptions="Center">

            <StackLayout Spacing="10"
                         HeightRequest="50"
                         WidthRequest="150"
                         HorizontalOptions="Center"
                         BackgroundColor="LightBlue">
                <Label x:Name="etykietaWartosc"
                       Text="0"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="Large"
                       TextColor="Red" />
            </StackLayout>
            
            <Slider x:Name="suwak" 
                    Minimum="0" 
                    Maximum="255" 
                    ValueChanged="ZmianaSuwaka" />

            <Button x:Name="wyzeruj" 
                    Clicked="NacisnieciePrzycisku" 
                    BorderWidth="10"
                    BorderColor="Black"
                    FontSize="Large"
                    Text="Wyzeruj" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
